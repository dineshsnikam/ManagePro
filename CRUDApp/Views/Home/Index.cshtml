@{
    ViewData["Title"] = "Home Page";
}
<body>
<div class="home-background">
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="home-content">
        <h1>ManagePro</h1>
        <p class="lead">Your complete solution for product management and analytics</p>

        <div class="action-buttons">
            <a class="btn btn-custom btn-primary" asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="btn btn-custom btn-success" asp-controller="Product" asp-action="Index">
                <i class="fas fa-cubes"></i> Products
            </a>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="~/css/HomeIndex.css"/> 
<script src="~/js/HomeIndex.js"></script>
</body>