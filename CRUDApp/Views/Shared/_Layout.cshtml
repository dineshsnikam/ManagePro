<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManagePro</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManagePro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --bg-primary: #f4f4f4;
            --text-primary: #333;
            --sidebar-bg: linear-gradient(135deg, #1d3557, #457b9d);
            --sidebar-text: white;
            --card-bg: white;
            --footer-bg: white;
            --footer-text: #000;
            --hover-bg: rgba(255, 255, 255, 0.2);
            --shadow-color: rgba(0, 0, 0, 0.1);
            --header-height: 60px;
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --transition-speed: 0.3s;
        }

        .dark-mode {
            --bg-primary: #121212;
            --text-primary: #f1f1f1;
            --sidebar-bg: linear-gradient(135deg, #0f0f0f, #1f1f1f);
            --sidebar-text: #ffffff;
            --card-bg: #2a2a2a;
            --footer-bg: #1f1f1f;
            --footer-text: #ffffff;
            --hover-bg: #333333;
            --shadow-color: rgba(0, 0, 0, 0.3);
        }

        html {
            transition: background-color var(--transition-speed) ease;
            background-color: var(--bg-primary);
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            padding-top: var(--header-height);
        }

            /* Apply dark mode immediately if neede */
            body.dark-mode {
                --bg-primary: #121212;
                --text-primary: #f1f1f1;
                --sidebar-bg: linear-gradient(135deg, #0f0f0f, #1f1f1f);
                --sidebar-text: #ffffff;
                --card-bg: #2a2a2a;
                --footer-bg: #1f1f1f;
                --footer-text: #ffffff;
                --hover-bg: #333333;
                --shadow-color: rgba(0, 0, 0, 0.3);
            }

        /* Header Styles */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: var(--header-height);
            /* background: var(--sidebar-bg); */
            background-color:transparent;
            color: darkblue;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 1000;
            box-shadow: 0 1px 1px var(--shadow-color);
        }

        .header-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin: 0;
        }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            top: var(--header-height);
            left: 0;
            height: calc(100vh - var(--header-height));
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            padding: 1rem 0;
            box-shadow: 2px 0 10px var(--shadow-color);
            z-index: 999;
            transition: all var(--transition-speed) ease;
            overflow-y: auto;
        }

        .sidebar-collapsed {
            width: var(--sidebar-collapsed-width);
        }

            .sidebar-collapsed .nav-text,
            .sidebar-collapsed .sidebar-header h4,
            .sidebar-collapsed .dark-mode-toggle span {
                display: none;
            }

            .sidebar-collapsed .sidebar-header {
                justify-content: center;
            }

            .sidebar-collapsed .dark-mode-toggle {
                justify-content: center;
                padding: 10px 5px;
            }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar h4 {
            color: var(--sidebar-text);
            margin: 0;
            font-weight: bold;
            transition: all var(--transition-speed);
        }

        .nav-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            display: flex;
            align-items: center;
            color: var(--sidebar-text);
            padding: 12px 15px;
            margin: 5px 10px;
            text-decoration: none;
            border-radius: 8px;
            transition: all var(--transition-speed);
            white-space: nowrap;
        }

            .nav-link:hover {
                background-color: var(--hover-bg);
                transform: translateX(5px);
            }

        .nav-icon {
            font-size: 1.2rem;
            margin-right: 15px;
            min-width: 25px;
            text-align: center;
            transition: all var(--transition-speed);
        }

        .nav-text {
            transition: all var(--transition-speed);
        }

        .active {
            background-color: var(--hover-bg);
            font-weight: bold;
        }

        /* Content Area */
        .content {
            margin-left: var(--sidebar-width);
            padding: 20px;
            transition: all var(--transition-speed) ease;
            min-height: calc(100vh - var(--header-height));
        }

        .content-expanded {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* Footer Styles */
        .footer {
            position: fixed;
            bottom: 0;
            left: var(--sidebar-width);
            right: 0;
            background-color: var(--footer-bg);
            color: var(--footer-text);
            text-align: center;
            padding: 10px 0;
            box-shadow: 0 -1px 5px var(--shadow-color);
            z-index: 998;
            transition: all var(--transition-speed) ease;
        }

        .footer-expanded {
            left: var(--sidebar-collapsed-width);
        }

        /* Dark Mode Toggle */
        .dark-mode-toggle {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: calc(100% - 20px);
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all var(--transition-speed);
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 10px;
        }

            .dark-mode-toggle:hover {
                background-color: rgba(255, 255, 255, 0.2);
            }

        .toggle-icon {
            font-size: 1rem;
        }

        /* Cards and Content Elements */
        .dynamic-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
        }

        .dynamic-card {
            background-color: var(--card-bg);
            border-radius: 10px;
            box-shadow: 0 2px 6px var(--shadow-color);
            padding: 1.5rem;
            flex: 1 1 300px;
            transition: all var(--transition-speed);
        }

            .dynamic-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px var(--shadow-color);
            }

        /* Responsive Adjustments */
        @@media (max-width: 992px) {
            .sidebar {
                width: var(--sidebar-collapsed-width);
            }

                .sidebar .nav-text,
                .sidebar h4,
                .dark-mode-toggle span {
                    display: none;
                }

            .content {
                margin-left: var(--sidebar-collapsed-width);
            }

            .footer {
                left: var(--sidebar-collapsed-width);
            }

            .nav-link {
                justify-content: center;
                padding: 12px 0;
            }

            .nav-icon {
                margin-right: 0;
            }

            .dark-mode-toggle {
                justify-content: center;
                padding: 10px 5px;
            }
        }

        @@media (max-width: 768px) {
            .header-title {
                font-size: 1.2rem;
            }

            .mobile-menu-btn {
                display: block;
            }

            .sidebar {
                transform: translateX(-100%);
                width: 80%;
                max-width: 300px;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

                    .sidebar.show .nav-text,
                    .sidebar.show h4,
                    .sidebar.show .dark-mode-toggle span {
                        display: inline;
                    }

                    .sidebar.show .dark-mode-toggle {
                        justify-content: flex-start;
                        padding: 10px;
                    }

            .content {
                margin-left: 0;
            }

            .footer {
                left: 0;
            }
        }

        @@media (max-width: 576px) {
            .dynamic-card {
                flex: 1 1 100%;
            }

            .header {
                padding: 0 10px;
            }

            .content {
                padding: 15px;
            }

            .sidebar {
                width: 85%;
            }
        }

        /* Animation for sidebar items */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .nav-item {
            animation: fadeIn 0.3s ease forwards;
            opacity: 0;
        }

            .nav-item:nth-child(1) {
                animation-delay: 0.1s;
            }

            .nav-item:nth-child(2) {
                animation-delay: 0.2s;
            }

            .nav-item:nth-child(3) {
                animation-delay: 0.3s;
            }

            .nav-item:nth-child(4) {
                animation-delay: 0.4s;
            }

            .nav-item:nth-child(5) {
                animation-delay: 0.5s;
            }

            .nav-item:nth-child(6) {
                animation-delay: 0.6s;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <button class="mobile-menu-btn" id="mobileMenuBtn">
            <i class="fas fa-bars"></i>
        </button>
        <h1 class="header-title">ManagePro</h1>
        <div></div> <!-- Empty div for flex spacing -->
    </header>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h4>Menu</h4>
            <button class="btn btn-sm btn-link text-white" id="toggleSidebar">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
        <ul class="nav-menu">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="nav-icon fas fa-home"></i>
                    <span class="nav-text">Home</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="nav-icon fas fa-chart-line"></i>
                    <span class="nav-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index">
                    <i class="nav-icon fas fa-boxes"></i>
                    <span class="nav-text">Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="History" asp-action="Index">
                    <i class="nav-icon fas fa-history"></i>
                    <span class="nav-text">History</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <i class="nav-icon fas fa-sign-out-alt"></i>
                    <span class="nav-text">Logout</span>
                </a>
            </li>
        </ul>
        <button class="dark-mode-toggle" id="darkModeToggle">
            <i class="toggle-icon fas fa-moon" id="darkModeIcon"></i>
            <span id="darkModeText">Dark Mode</span>
        </button>
    </aside>

    <!-- Main Content -->
    <main class="content" id="mainContent">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer" id="footer">
        <div class="container text-center">
            <span>&copy; 2025 ManagePro. All rights reserved.</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Immediately apply dark mode if it was previously set
        document.addEventListener('DOMContentLoaded', function() {
            // Check for saved dark mode preference
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                document.getElementById('darkModeIcon').classList.remove('fa-moon');
                document.getElementById('darkModeIcon').classList.add('fa-sun');
                document.getElementById('darkModeText').textContent = 'Light Mode';
            }

            // Add loaded class to body to enable transitions
            setTimeout(() => {
                document.body.classList.add('loaded');
            }, 10);
        });

        // Mobile menu toggle
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });

        // Sidebar toggle (collapse/expand)
        document.getElementById('toggleSidebar').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('mainContent');
            const footer = document.getElementById('footer');

            sidebar.classList.toggle('sidebar-collapsed');
            content.classList.toggle('content-expanded');
            footer.classList.toggle('footer-expanded');

            // Change icon
            const icon = this.querySelector('i');
            if (sidebar.classList.contains('sidebar-collapsed')) {
                icon.classList.remove('fa-chevron-left');
                icon.classList.add('fa-chevron-right');
            } else {
                icon.classList.remove('fa-chevron-right');
                icon.classList.add('fa-chevron-left');
            }
        });

        // Dark mode toggle
        document.getElementById('darkModeToggle').addEventListener('click', function() {
            const body = document.body;
            const icon = document.getElementById('darkModeIcon');
            const text = document.getElementById('darkModeText');

            body.classList.toggle('dark-mode');

            const isDarkMode = body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);

            if (isDarkMode) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
                text.textContent = 'Light Mode';
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
                text.textContent = 'Dark Mode';
            }
        });

        // Highlight active menu item
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });

        @if (TempData["Notification"] != null)
        {
            <text>
                        Swal.fire({
                            icon: '@TempData["NotificationType"]',
                            title: '@TempData["Notification"]'
                        });
            </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>