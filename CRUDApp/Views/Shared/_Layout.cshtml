<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManagePro</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManagePro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <!-- Prevent dark mode flash -->



</head>
<body>
    <!-- Header -->
    <header class="header">
        <button class="mobile-menu-btn" id="mobileMenuBtn">
            <i class="fas fa-bars"></i>
        </button>
        <h1 class="header-title">ManagePro</h1>
        <div></div> <!-- Empty div for flex spacing -->
    </header>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h4>Menu</h4>
            <button class="btn btn-sm btn-link text-white" id="toggleSidebar">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
        <ul class="nav-menu">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="nav-icon fas fa-home"></i>
                    <span class="nav-text">Home</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="nav-icon fas fa-chart-line"></i>
                    <span class="nav-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index">
                    <i class="nav-icon fas fa-boxes"></i>
                    <span class="nav-text">Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="History" asp-action="Index">
                    <i class="nav-icon fas fa-history"></i>
                    <span class="nav-text">History</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <i class="nav-icon fas fa-sign-out-alt"></i>
                    <span class="nav-text">Logout</span>
                </a>
            </li>
        </ul>
        <button class="dark-mode-toggle" id="darkModeToggle">
            <i class="toggle-icon fas fa-moon" id="darkModeIcon"></i>
            <span id="darkModeText">Dark Mode</span>
        </button>
    </aside>

    <!-- Main Content -->
    <main class="content" id="mainContent">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer" id="footer">
        <div class="container text-center">
            <span>&copy; 2025 ManagePro. All rights reserved.</span>
        </div>
    </footer>

    <!-- Scripts -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        

        @if (TempData["Notification"] != null)
        {
            <text>
                        Swal.fire({
                            icon: '@TempData["NotificationType"]',
                            title: '@TempData["Notification"]'
                        });
            </text>
        }

    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/Layout.js"></script>
</body>
</html>